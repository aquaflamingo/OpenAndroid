<resources>

    <!-- Base application theme. -->
    <style name="HibernateTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_dark</item>
        <item name="colorAccent">@color/material_blue_500</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/material_blue_light</item>
        <item name="android:textColorSecondaryInverse">@android:color/background_light</item>
    </style>

    <style name="FullscreenTheme" parent="HibernateTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>

    </style>

    <style name="TextH1">
        <item name="android:textSize">@dimen/text_36</item>
    </style>

    <style name="TextH2">
        <item name="android:textSize">@dimen/text_24</item>
    </style>


    <style name="DismissButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>


    <style name="CardViewThemeAppBar" parent="HibernateTheme.AppBarOverlay">
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:background">@android:color/background_light</item>
        <item name="android:textColor">#3d3d3d</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CardViewThemePop" parent="HibernateTheme.AppBarOverlay">
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:background">@android:color/background_light</item>
    </style>

    <style name="HibernateTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="HibernateTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <color name="black">#222222</color>
</resources>
