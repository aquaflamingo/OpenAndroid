<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_main_alarm"
    tools:context="com.pressurelabs.hibernate.ui.activities.MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- 500px Background -->
    <!-- Main Objective -->
    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Image -->
            <include layout="@layout/frgmt_main_top"/>

            <!-- Bottom Section -->
           <include layout="@layout/frgmt_main_bottom"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    </FrameLayout>
</android.support.v4.widget.NestedScrollView>

