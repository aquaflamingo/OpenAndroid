<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@android:color/background_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!-- android:textColorPrimaryInverse is the  color of the title
       text in the Toolbar, in the Theme.AppCompat.Light theme:  -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="NavigationHeaderUserName">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

    <style name="NavigationSubHeaderKey">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="ContentHeaderTextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FullMinimalButton" parent="Widget.AppCompat.Button.Borderless">

    </style>

    <style name="CardViewTitle">
        <item name="android:textAppearance">
            @style/TextAppearance.Widget.AppCompat.Toolbar.Title
        </item>
        <item name="android:textSize">
            20sp
        </item>
    </style>


    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThoughtTitle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_material_black</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:inputType">textFilter</item>
        <item name="android:digits">@string/text_filter_et_express_title</item>
        <item name="android:maxLength">40</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:maxWidth">300dp</item>
    </style>

    <style name="ThoughtBody">
        <item name="android:maxLength">500</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MatIntroHeader">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
    </style>
</resources>
